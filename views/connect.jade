extends layout

block content

	// A hidden input named public_token will be appended to this form once the user has completed the Link flow. Link will then submit the form, sending the public_token to your server.
	form(id="some-id" method="POST" action="/authenticate")

	// To use Link with longtail institutions on Connect, set thedata-long-tail attribute to 'true'. See the Parameter Reference for additional documentation.
	script(src="https://cdn.plaid.com/link/stable/link-initialize.js" data-client-name="HealthDollars" data-form-id="some-id" data-key="test_key" data-product="connect" data-env="tartan" data-long-tail="true")


	button(id="plaidLinkButton")
		Open Plaid Link

	script(src="https://cdn.plaid.com/link/stable/link-initialize.js")
	script
		var sandboxHandler = Plaid.create({
		  env: 'tartan',
		  clientName: 'Client Name',
		  key: 'test_key',
		  product: 'auth',
		  onSuccess: function(public_token) {
		    console.log(public_token);
		  },
		});

		document.getElementById('plaidLinkButton').onclick = function() {
		  // Trigger the "Institution Select" view
		  sandboxHandler.open();
		};